mixin responsibility-white(data)
    +b('responsibility-white', {t: 'section'})&attributes(attributes)
        +e('wrapper')
            +e('inner')
                +b('content')(data-aos="fade-down")
                    +b('image-block', {m: 'left'})
                        +e('cont')
                            +e('image')(alt="img" src="assets/images/content/white.png")
                    +e('text-content')
                        +e('title', {t: 'h3'})= data.firstBlock.title
                        +e('description', {t: 'p'})= data.firstBlock.description
                +b('content', {m: 'flex-start'})(data-aos="fade-down")
                    +b('image-block', {m: 'right'})
                        +e('cont')
                            +e('image')(alt="img" src="assets/images/content/white-1.png")
                    +e('text-content')
                        +e('title', {t: 'h3'})= data.firstBlock.title
                        +e('description', {t: 'p'})= data.firstBlock.description
                +b('content')(data-aos="fade-down")
                    +b('image-block', {m: 'left'})
                        +e('cont')
                            +e('image')(alt="img" src="assets/images/content/white-2.png")
                    +e('text-content')
                        +e('title', {t: 'h3'})= data.firstBlock.title
                        +e('description', {t: 'p'})= data.firstBlock.description