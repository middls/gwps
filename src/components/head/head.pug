mixin head(data)
    -
        var title = data.title 
            ? data.title + ' :: ' + config.projectName 
            : config.projectName;
        var author = "RussianRobotics"
        var description = "The template for quick start of development with Gulp, Webpack, Pug and SASS"
        var keywords = "gulp, webpack, bem, modules, sprites, svg, pug, sass, boilerplate, frontend, project, template"

    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(content="IE=edge" http-equiv="X-UA-Compatible")

    //- Title
    title= title

    //- Meta tags
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

    meta(name="format-detection" content="telephone=no")
    meta(name="format-detection" content="address=no")
    meta(name="robots" content="noodp, noydir")

    //- iOS: Add to Home Screen
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
    meta(name="apple-mobile-web-app-title" content=config.projectName)

    //- Styles
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i&subset=cyrillic")
    link(rel="stylesheet" href=`${config.path.styles}/main.css`)

    //- Scripts
    script(
        src="https://cdnjs.cloudflare.com/ajax/libs/lazysizes/4.1.4/lazysizes.min.js" 
        integrity="sha256-TAKkT1A7MjH+laNK0pwZ92ns2lMF7VlqJt/E5rIJ/rI=" 
        crossorigin="anonymous"
        async
    )

    //- Facebook / Open Graph
    //- Facebook: https://developers.facebook.com/docs/sharing/webmasters#markup
    //- Open Graph: http://ogp.me/
    meta(property="fb:app_id" content="387979211564142")
    meta(property="og:url" content=url + "index.html")
    meta(property="og:type" content="website")
    meta(property="og:title" content=data.title)
    meta(property="og:image" content=url + "assets/images/content/preview.png")
    meta(property="og:description" content=description)
    meta(property="og:site_name" content=config.projectName)
    meta(property="og:locale" content="en_US")
    meta(property="article:author" content=author)

    //- Favicons
    //- Genereted with http://realfavicongenerator.net/
    link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="/favicon-16x16.png")
    link(rel="manifest", href="/site.webmanifest")
    link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#5bbad5")
    meta(name="msapplication-TileColor", content="#da532c")
    meta(name="theme-color", content="#ffffff")